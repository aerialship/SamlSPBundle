{
    "name": "aerialship/saml-sp-bundle",
    "license": "MIT",
    "type": "symfony-bundle",
    "description": "Symfony2 SAML2 authentication bundle",
    "autoload": {
        "psr-0": { "AerialShip\\SamlSPBundle\\": "src/" }
    },
    "require": {
        "php": ">=5.4.1",
        "aerialship/lightsaml": "~1.0",
        "symfony/symfony": "~2.2"
    },
    "suggest": {
        "doctrine/orm": "If you want store sso state to database"
    },
    "scripts": {
        "post-install-cmd": [
            "bash contrib/setup.sh"
        ],
        "post-update-cmd": [
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require-dev": {
        "squizlabs/php_codesniffer": "~2.0@dev"
    }
}
